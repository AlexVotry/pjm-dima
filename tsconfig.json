{
  "compilerOptions": {
    "baseUrl": "src",
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "es2015.promise",
      "es5",
      "es6"
    ],
    "target": "es6",
    "module": "amd",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "removeComments": true,
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "declaration": false,
    "noLib": false,
    "preserveConstEnums": true,
    "noEmit": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "importHelpers": true,
    "skipLibCheck": true
  },
  "types": [
    "arcgis-js-api",
    "moment"
  ],
  "include": [
    "src/*"
  ]
}